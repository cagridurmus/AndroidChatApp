<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ozel_profil_Resmi"
        android:layout_marginRight="14dp"
        android:cropToPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/profil_resmi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/ozel_profil_ad"
        android:text="Kullanici Adini Gosterme"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/ozel_kullanici_son"
        android:layout_below="@+id/ozel_profil_ad"
        android:text="Son Gorulme Tarihi"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>