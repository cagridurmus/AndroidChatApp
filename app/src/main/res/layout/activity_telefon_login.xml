<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelefonLoginActivity">



    <EditText
        android:id="@+id/telefon_numara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Telefon numaranizi yaziniz"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_baseline_phone_android_24"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/dogrulama_kodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Dogrulama kodunuz yaziniz"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@id/telefon_numara"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/dogrulama_kodu_Gonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS olarak gonder"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/dogrulama_kodu"/>

    <Button
        android:id="@+id/dogrulama_butonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dogrula"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/dogrulama_kodu_Gonder"
        android:visibility="invisible"/>

</RelativeLayout>