<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyarlarActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/ayarlar_toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_ayarlar"
        android:layout_below="@id/ayarlar_toolbar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/profil_resmi"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/design_default_color_primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>
    
    <EditText
        android:id="@+id/kullanici_adi_ayarlar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/profil_resmi_ayarlar"
        android:inputType="textMultiLine"
        android:hint="Kullanici Adi"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_person"
        android:textStyle="bold"
        android:background="@drawable/girdiler"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="4dp"/>

    <EditText
        android:id="@+id/profil_durum_ayarlar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/kullanici_adi_ayarlar"
        android:inputType="textMultiLine"
        android:hint="Hey artik bende workcall kullaniyorum"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_person_durum"
        android:textStyle="bold"
        android:background="@drawable/girdiler"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="4dp"/>

    <Button
        android:id="@+id/guncelleme_ayarlar"
        android:layout_below="@id/profil_durum_ayarlar"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonlar"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="Guncelle "
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"/>

</RelativeLayout>