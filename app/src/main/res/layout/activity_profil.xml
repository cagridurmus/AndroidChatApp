<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_ziyaret"
        android:src="@drawable/profil_resmi"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="210dp"
        android:layout_height="210dp"/>

    <TextView
        android:id="@+id/kullanici_ziyaret"
        android:textAlignment="center"
        android:layout_below="@id/profil_ziyaret"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Kullanici Adi"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/profil_durum_ziyaret"
        android:textAlignment="center"
        android:layout_below="@id/kullanici_ziyaret"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Hey Artik bende workcalldayim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/mesaj_talebi"
        android:layout_below="@id/profil_durum_ziyaret"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj Talebi Gonder"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/mesaj_talebi_iptal"
        android:layout_below="@id/mesaj_talebi"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj Talebi Iptal"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />

</RelativeLayout>